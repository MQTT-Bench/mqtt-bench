    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'mqtt-bench'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug mqtt-bench",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mqtt-bench",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "bin"
                }
            },
            "args": [
                "pub",
                "--host",
                "mqtt-mw5b95mv-gz-public.mqtt.tencenttdmq.com",
                "--ssl",
                "-u","root",
                "--password", "password",
                "--topic", "home"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mqtt-bench'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mqtt-bench",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
