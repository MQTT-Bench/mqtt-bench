    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "mqtt-bench connect",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mqtt-bench",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "debug"
            },
            "args": [
                "connect",
                "--host", "localhost",
                "--port", "8883",
                "--username","user0",
                "--password", "secret0",
                "--tls-type", "byoc",
                "--tls-path", "/Users/lizhanhui/repo/mqtt-bench/assets"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "mqtt-bench publish",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mqtt-bench",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "bin"
                }
            },
            "args": [
                "pub",
                "--host",
                "mqtt-8x92m33r-gz-public.mqtt.tencenttdmq.com",
                "--ssl",
                "-u","root",
                "--password", "password",
                "--topic", "home"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mqtt-bench'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mqtt-bench",
                    "--package=mqtt-bench"
                ],
                "filter": {
                    "name": "mqtt-bench",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}